{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "strict": false,
    "incremental": true,
    "declaration": true,
    "skipLibCheck": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "noFallthroughCasesInSwitch": false,
    "forceConsistentCasingInFileNames": false,
    "outDir": "dist",
    "baseUrl": "code",
    "paths": {
      "~/*": ["src/*"],
      "~test/*": ["test/*"]
    }
  }
}